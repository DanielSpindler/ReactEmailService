{
  "name": "reactmailer",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/index.js\" \"email dev --dir src/emails\"",
    "devEmail": "email dev --dir src/emails",
    "format": "npx prettier . --write"
  },
  "author": "Daniel Spindler",
  "license": "MIT",
  "description": "A simple Mailer using ReactEmail",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "prettier": "3.5.3",
    "react-email": "3.0.7",
    "tailwindcss": "^3.0.24",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@react-email/components": "0.0.33",
    "@sendgrid/mail": "^7.7.0",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  }
}
